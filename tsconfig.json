{
    "compilerOptions": {
        // imports
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "sourceMap": true,

        // language
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        // others
        "declaration": true
    }
}